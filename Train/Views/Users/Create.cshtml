@model UserViewModel

<form asp-controller="Users" asp-action="Create" method="post" id="createForm" onsubmit="onSubmit();">
<div asp-validation-summary="ModelOnly">
        <span class="text-danger">Please correct the following errors</span>
</div>
<div class="modal-body">
    <div class="form-group">
        <label asp-for="Name" class="form-control-label"></label>
            <input asp-for="Name" class="form-control" id="fullname" />
            <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="form-control-label"></label>
        <input asp-for="Email" class="form-control" id="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <!-- Inside your view -->
    <div class="form-group">
        <label asp-for="DepartmentId" class="form-control-label"></label>
        <select asp-for="DepartmentId" asp-items="@Model.DepartmentList" class="form-control">
            <option value="">Select Department</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <input type="submit" class="btn btn-primary" name="submit" />
</div>
</form>
