@model CreateUserViewModel
<style>
    .search-dropmenu {
        position: relative;
        display: block;
    }

    .add-btn {
        position: absolute;
        right: -0.3rem;
        top: 0.05rem;
        display: none;
        margin:0;
    }
</style>
<form asp-controller="Users" asp-action="Create" method="post" id="createForm" onsubmit="onSubmit();">
<div asp-validation-summary="ModelOnly">
        <span class="text-danger">Please correct the following errors</span>
</div>
<div class="modal-body">
    <div class="form-group">
        <label asp-for="Name" class="form-control-label"></label>
            <input asp-for="Name" class="form-control" id="fullname" />
            <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="form-control-label"></label>
        <input asp-for="Email" class="form-control" id="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentId" class="form-control-label"></label>
        <div class="search-dropmenu">
            <input type="text" class="form-control" placeholder="Search" id="search-input">
            <input asp-for="DepartmentId" type="hidden" id="selected-value" />
            <button type="button" class="btn btn-primary add-btn">Add</button>
            <div id="dropdown" class="dropdown-menu">
                <!-- Options will be dynamically added here -->
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <input type="submit" class="btn btn-primary" name="submit" />
</div>
</form>