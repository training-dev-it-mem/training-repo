@model ManagerViewModel
@{
    var department = Enum.GetValues(typeof(Department))
                         .Cast<Department>()
                         .ToList();
}

<form asp-controller="Managers" asp-action="Create" method="post" id="createForm" onsubmit="onSubmit();">
<div asp-validation-summary="ModelOnly">
        <span class="text-danger">Please correct the following errors</span>
</div>
<div class="modal-body">
    <div class="form-group">
        <label asp-for="Name" class="form-control-label"></label>
        <input asp-for="Name" class="form-control" id="name" />
            <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="form-control-label"></label>
        <input asp-for="Email" class="form-control" id="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
    </div>

     <div class="form-group">
            <label for="Department" class="form-control-label">Department</label>
                <select asp-for="Department" class="form-control select2" id="departmentDropdown">
                    <option value="-1">Select Department</option>
                    @foreach (var option in department)
                    {
                        <option value="@(option)">@option</option>
                    }
                </select>
            <span asp-validation-for="Department" class="text-danger"></span>
    </div>


</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <input type="submit" class="btn btn-primary" name="submit" />
</div>
</form>

