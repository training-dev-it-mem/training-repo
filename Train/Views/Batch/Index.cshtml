@model List<Train.Models.Batch>
<div class="row">
    <div class="col">
        <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
                <h3 class="mb-0">Batch Table</h3>
            </div>
            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                   
                            <th scope="col" class="sort" data-sort="StartDate">StartDate</th>
                            <th scope="col" class="sort" data-sort="EndDate">EndDate</th>
                            <th scope="col" class="sort" data-sort="StartTime">StartTime</th>
                            <th scope="col" class="sort" data-sort="EndtTime">EndTime</th>
                            <th scope="col" class="sort" data-sort="Action">Action</th>
                            
                        </tr>

                    </thead>
                    <tbody class="list">
                        @foreach (var batch in Model)
                        {
                            <tr>
                               
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@batch.StartDate.ToString("dd/MM/yyyy")</span>
                                        </div>
                                    </div>
                                </th>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@batch.EndDate.ToString("dd/MM/yyyy")</span>
                                        </div>
                                    </div>
                                </th>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@batch.StartTime</span>
                                        </div>
                                    </div>
                                </th>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@batch.EndTime</span>
                                        </div>
                                    </div>
                                </th>
                               <th>
                                    <!-- Edit icon with link to show the Edit modal -->
                                    <a href="#" class="btn btn-sm btn-icon btn-outline-primary edit-link" data-toggle="modal" data-target="#editModal" data-id="@batch.Id">
                                        <i class="ni ni-ruler-pencil"></i> Edit
                                    </a>
                                    <!-- Delete icon with link to Delete action -->
                                    <a href="#" class="btn btn-sm btn-icon btn-outline-danger delete-link" data-id="@batch.Id">
                                        <i class="ni ni-basket"></i> Delete
                                    </a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Card footer -->
            <div class="card-footer py-4">
                <nav aria-label="...">
                    <ul class="pagination justify-content-end mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">
                                <i class="fas fa-angle-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <i class="fas fa-angle-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="Create" asp-controller="Batch">
                <div class="modal-body">
                   
                    <div class="form-group">
                        <label for="startdate" class="form-control-label">StartDate</label>
                        <input class="form-control" type="date" id="startdate" name="StartDate">
                    </div>
                    <div class="form-group">
                        <label for="enddate" class="form-control-label">EndDate</label>
                        <input class="form-control" type="date" value="2018-11-23" id="enddate" name="EndDate">
                    </div>
                    
                    <div class="form-group">
                        <label for="starttime" class="form-control-label">StartTime</label>
                        <input class="form-control" type="time" value="10:30:00" id="starttime" name="StartTime">
                    </div>
                    <div class="form-group">
                        <label for="endtime" class="form-control-label">EndTime</label>
                        <input class="form-control" type="time" value="10:30:00" id="endtime" name="EndTime">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Modal for Edit Form -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="Edit" asp-controller="Batch">
                <input type="hidden" for="Id" name="Id" /> <!-- Hidden field for the employee ID -->

                <div class="modal-body">
                    <div class="form-group">
                        <label for="StartDate" class="form-control-label">Start Date</label>
                        <input for="StartDate" name="StartDate" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="EndDate" class="form-control-label">End Date</label>
                        <input for="EndDate" name="EndDate" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="StartTime" class="form-control-label">Start Time</label>
                        <input for="StartTime" name="StartTime" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="EndTime" class="form-control-label">End Time</label>
                        <input for="EndTime" name="EndTime" class="form-control" />
                    </div>
                    

                    <!-- Add other form fields as needed -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="Delete" asp-controller="Batch">
                <input type="hidden" name="id" /> <!-- Hidden field for the Batch ID -->
                <div class="modal-body">
                    <p>Are you sure you want to delete this Batch?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle click event on the "Edit" link
            $(".edit-link").on("click", function (e) {
                e.preventDefault();

                var batchId = $(this).data("id");
                console.log("ID :", batchId);
                // Make an AJAX request to load the employee data
                $.ajax({
                    url: "/Batch/GetBatchId", // Replace with your actual action method
                    method: "GET",
                    data: { id: batchId },
                    success: function (batch) {
                        // Populate the modal with the employee data
                        $("#editModal input[name='Id']").val(batch.id);
                        $("#editModal input[name='StartDate']").val(batch.startDate);
                        $("#editModal input[name='EndDate']").val(batch.endDate);
                        $("#editModal input[name='StartTime']").val(batch.startTime);
                        $("#editModal input[name='EndTime']").val(batch.endTime);

                        // Show the modal
                        $("#editModal").modal("show");
                    },
                    error: function () {
                        console.error("Error loading employee data");
                    }
                });
            });

            // Handle click event on the "Delete" link
            $(".delete-link").on("click", function (e) {
                e.preventDefault();
                var batchId = $(this).data("id");
                // Set the batch ID in the modal for reference
                $("#deleteModal input[name='id']").val(batchId);

                // Show the modal
                $("#deleteModal").modal("show");
            });

        });
    </script>
}
