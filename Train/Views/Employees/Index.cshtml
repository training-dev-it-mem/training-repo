@model List<Train.Models.Employee>
<div class="row">
    <div class="col">
        <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
                <h3 class="mb-0">Emplyees table</h3>
            </div>
            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="sort" data-sort="Name">Name</th>
                            <th scope="col" class="sort" data-sort="Email">Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@employee.Name</span>
                                        </div>
                                    </div>
                                </th>
                                 <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@employee.Email</span>
                                        </div>
                                    </div>
                                </th>
                                <th>
                                    <!-- Edit icon with link to show the Edit modal -->
                                    <a href="#" class="btn btn-sm btn-neutral edit-link" data-toggle="modal" data-target="#editModal" data-id="@employee.Id">
                                        <i class="ni ni-ruler-pencil"></i> Edit
                                    </a>
                                    |
                                    <!-- Delete icon with link to Delete action -->
                                    <a href="@Url.Action("Delete", new { id = 0 })">
                                        <i class="ni ni-basket"></i>
                                    </a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Card footer -->
            <div class="card-footer py-4">
                <nav aria-label="...">
                    <ul class="pagination justify-content-end mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">
                                <i class="fas fa-angle-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <i class="fas fa-angle-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="Create" asp-controller="Employees">
            <div class="modal-body">
                <div class="form-group">
                    <label for="example-text-input" class="form-control-label">Name</label>
                    <input name="Name" class="form-control" type="text" value="..." id="example-text-input">
                </div>
                <div class="form-group">
                    <label for="example-email-input" class="form-control-label">Email</label>
                    <input name="Email" class="form-control" type="email" value="argon@example.com" id="example-email-input">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
            </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal for Edit Form -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="Edit" asp-controller="Employees">
                <input type="hidden" for="Id" name="Id" /> <!-- Hidden field for the employee ID -->

                <div class="modal-body">
                    <div class="form-group">
                        <label for="Name" class="form-control-label">Name</label>
                        <input for="Name" name="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Email" class="form-control-label">Email</label>
                        <input for="Email" name="Email" class="form-control" />
                    </div>
                    <!-- Add other form fields as needed -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle click event on the "Edit" link
            $(".edit-link").on("click", function (e) {
                e.preventDefault();

                var employeeId = $(this).data("id");
                console.log("ID :" , employeeId);
                // Make an AJAX request to load the employee data
                $.ajax({
                    url: "/Employees/GetEmployeeById", // Replace with your actual action method
                    method: "GET",
                    data: { id: employeeId },
                    success: function (employee) {
                        // Populate the modal with the employee data
                        $("#editModal input[name='Id']").val(employee.id);
                        $("#editModal input[name='Name']").val(employee.name);
                        $("#editModal input[name='Email']").val(employee.email);

                        // Show the modal
                        $("#editModal").modal("show");
                    },
                    error: function () {
                        console.error("Error loading employee data");
                    }
                });
            });
        });
    </script>
}

