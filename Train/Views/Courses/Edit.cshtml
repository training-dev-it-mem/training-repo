@model CourseViewModel

<form asp-controller="Courses" asp-action="Edit" method="post" id="editForm" onsubmit="onSubmit();">
<div class="modal-body">
    <input asp-for="Id" type="hidden"/>
    <div class="form-group">
        <label asp-for="Name" class="form-control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="form-control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location" class="form-control-label"></label>
        <input asp-for="Location" class="form-control"/>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdattionDate" class="form-control-label"></label>
        <input asp-for="AdattionDate" type="date" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Seats" class="form-control-label"></label>
        <input asp-for="Seats" class="form-control" />
        <span asp-validation-for="Seats" class="text-danger"></span>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <input type="submit" class="btn btn-primary" name="submit" />
</div>
</form>
