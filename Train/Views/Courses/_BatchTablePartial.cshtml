@model CourseDetailsViewModel
<!-- Light table -->
<div id="batch-table" />
<div class="table-responsive">
            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col" class="sort" data-sort="StartDate">StartDate</th>
                            <th scope="col" class="sort" data-sort="EndDate">EndDate</th>
                            <th scope="col" class="sort" data-sort="StartTime">StartTime</th>
                            <th scope="col" class="sort" data-sort="EndtTime">EndTime</th>
                            <th scope="col" class="sort" data-sort="Action">Action</th>
                        </tr>

        </thead>
        <tbody class="list">
            @foreach (var batch in Model.batches)
            {
                <tr>

                    <th scope="row">
                        <div class="media align-items-center">
                            <div class="media-body">
                                <span class="name mb-0 text-sm">@batch.StartDate.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </th>
                    <th scope="row">
                        <div class="media align-items-center">
                            <div class="media-body">
                                <span class="name mb-0 text-sm">@batch.EndDate.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                    </th>
                    <th scope="row">
                        <div class="media align-items-center">
                            <div class="media-body">
                        <span class="name mb-0 text-sm">@batch.StartTime.ToString("")</span>
                            </div>
                        </div>
                    </th>
                    <th scope="row">
                        <div class="media align-items-center">
                            <div class="media-body">
                        <span class="name mb-0 text-sm">@batch.EndTime</span>
                            </div>
                        </div>
                    </th>
                    <th>
                            <!-- Add icon with link to manage the course  -->
                            <a href="@Url.Action("Details", "Batch", new { batchId = batch.Id })" class="btn btn-sm btn-icon btn-outline-success">
                                <i class="ni ni-bullet-list-67"></i> Manage
                            </a>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>



 <!-- Table Pagination -->
<div class="card-footer py-4">
<nav aria-label="...">
    <ul class="pagination justify-content-end mb-4">
        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Details", new {courseId=Model.Id, page = Model.PageNumber - 1, pageSize = Model.PageSize })" tabindex="-1">
                <i class="fa fa-angle-left" aria-hidden="true"></i>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalCount / Model.PageSize + 1; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Details", new { courseId=Model.Id, page = i, pageSize = Model.PageSize })">@i</a>
            </li>
        }
        <li class="page-item @(Model.PageNumber == Model.TotalCount / Model.PageSize + 1 ? "disabled" : "")">
                    <a class="page-link" href="@Url.Action("Details", new { courseId=Model.Id, page = Model.PageNumber + 1, pageSize = Model.PageSize })">
                <i class="fa fa-angle-right" aria-hidden="true"></i>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>
</div>
</div>
