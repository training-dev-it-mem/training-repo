@model CourseViewModel
@{
    var status = Enum.GetValues(typeof(ProgramStatus))
                         .Cast<ProgramStatus>()
                         .ToList();
}

<form asp-controller="Courses" asp-action="Create" method="post" id="createForm" onsubmit="onSubmit();">
<div asp-validation-summary="ModelOnly">
        <span class="text-danger">Please correct the following errors</span>
</div>
<div class="modal-body">

    <div class="form-group">
        <label asp-for="Name" class="form-control-label"></label>
        <input asp-for="Name" class="form-control" id="name" />
            <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="form-control-label"></label>
        <input asp-for="Description" class="form-control" id="description" />
            <span asp-validation-for="Description" class="text-danger"></span>
    </div>

        <div class="form-group">
            <label asp-for="Location" class="form-control-label"></label>
            <input asp-for="Location" class="form-control" id="location" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Status" class="form-control-label">Status</label>
            <span asp-validation-for="Status" class="text-danger"></span>
            <select name="selectedStatus" class="form-control">
                <option value="-1">Select Program Status</option>
                @foreach (var option in status)
                {
                    <option value="@(option)">@option</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="additionDate" class="form-control-label">Addition Date</label>
            <input class="form-control" type="date" value="2018-11-23" id="additionDate" name="AdattionDate">
        </div>

        <div class="form-group">
            <label asp-for="Seats" class="form-control-label"></label>
            <input asp-for="Seats" class="form-control" />
            <span asp-validation-for="Seats" class="text-danger"></span>
        </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <input type="submit" class="btn btn-primary" name="submit" />
</div>
</form>
