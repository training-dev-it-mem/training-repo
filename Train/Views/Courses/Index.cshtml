@model List<Train.Models.Course>
<div class="row">
    <div class="col">
        <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
                <h3 class="mb-0">Programs Table</h3>
            </div>
            <!-- Light table -->
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>

                            <th scope="col" class="sort" data-sort="name">Name</th>
                            <th scope="col" class="sort" data-sort="Description">Description</th>
                            <th scope="col" class="sort" data-sort="AdattionDate">AdattionDate</th>
                            <th scope="col" class="sort" data-sort="Location">Location</th>
                            <th scope="col" class="sort" data-sort="Status">Status</th>
                            <th scope="col" class="sort" data-sort="Action">Action</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var course in Model)
                        {
                            <tr>

                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@course.Name</span>
                                        </div>
                                    </div>
                                </th>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@course.Description</span>
                                        </div>
                                    </div>
                                </th>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@course.AdattionDate</span>
                                        </div>
                                    </div>
                                </th>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@course.Location</span>
                                        </div>
                                    </div>
                                </th>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@course.Status</span>
                                        </div>
                                    </div>
                                </th>
                                <th>
                                    <!-- Edit icon with link to show the Edit modal -->
                                    <a href="#" class="btn btn-sm btn-icon btn-outline-primary edit-link" data-toggle="modal" data-target="#editModal" data-id="@course.Id">
                                        <i class="ni ni-ruler-pencil"></i> Edit
                                    </a>
                                    <!-- Delete icon with link to Delete action -->
                                    <a href="#" class="btn btn-sm btn-icon btn-outline-danger delete-link" data-id="@course.Id">
                                        <i class="ni ni-basket"></i> Delete
                                    </a>
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Card footer -->
            <div class="card-footer py-4">
                <nav aria-label="...">
                    <ul class="pagination justify-content-end mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">
                                <i class="fas fa-angle-left"></i>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">
                                <i class="fas fa-angle-right"></i>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="Create" asp-controller="Courses">
                <div class="modal-body">

                    <div class="form-group">
                        <label for="name" class="form-control-label">Name</label>
                        <input name="Name" class="form-control" type="text" value="..." id="name">
                    </div>
                    <div class="form-group">
                        <label for="description" class="form-control-label">Descreption</label>
                        <input name="Description" class="form-control" type="text" value="..." id="description">
                    </div>
                    <div class="form-group">
                        <label for="additionDate" class="form-control-label">Addition Date</label>
                        <input class="form-control" type="date" value="2018-11-23" id="additionDate" name="AdattionDate">
                    </div>
                    <select name="Location" class="form-control">
                        <option>Select Location</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                   
                   @* <div class="form-group">
                        <label for="example-text-input" class="form-control-label">Status</label>
                        <input name="Name" class="form-control" type="text" value="..." id="status">
                    </div>*@
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Modal for Edit Form -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Edit Form</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="Edit" asp-controller="Courses">
                <input type="hidden" for="Id" name="Id" /> <!-- Hidden field for the employee ID -->

                <div class="modal-body">
                    <div class="form-group">
                        <label for="Name" class="form-control-label">Name</label>
                        <input for="Name" name="Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Description" class="form-control-label">Description</label>
                        <input for="Description" name="Description" class="form-control" />
                    </div>
          
                    <div class="form-group">
                        <label for="AdditionDate" class="form-control-label">AdditionDate</label>
                        <input for="AdditionDate" name="AdattionDate" class="form-control" />
                    </div>
                    <select name="Location" class="form-control">
                        <option>Select Location</option>
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>

                    <!-- Add other form fields as needed -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="Delete" asp-controller="Courses">
                <input type="hidden" name="id" /> <!-- Hidden field for the Course ID -->
                <div class="modal-body">
                    <p>Are you sure you want to delete this Course?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle click event on the "Edit" link
            $(".edit-link").on("click", function (e) {
                e.preventDefault();

                var courseid= $(this).data("id");
                console.log("ID :", courseid);
                // Make an AJAX request to load the employee data
                $.ajax({
                    url: "/Courses/GetCoursesId", // Replace with your actual action method
                    method: "GET",
                    data: { id: courseid },
                    success: function (course) {
                        // Populate the modal with the employee data
                        $("#editModal input[name='Id']").val(course.id);
                        $("#editModal input[name='Name']").val(course.name);
                        $("#editModal input[name='Description']").val(course.description);
                        $("#editModal input[name='AdattionDate']").val(course.adattionDate);
                        $("#editModal select[name='Location']").val(course.location);

                        // Show the modal
                        $("#editModal").modal("show");
                    },
                    error: function () {
                        console.error("Error loading employee data");
                    }
                });
            });

            // Handle click event on the "Delete" link
            $(".delete-link").on("click", function (e) {
                e.preventDefault();
                var courseId = $(this).data("id");
                // Set the course ID in the modal for reference
                $("#deleteModal input[name='id']").val(courseId);

                // Show the modal
                $("#deleteModal").modal("show");
            });

        });
    </script>
}

